<%- include("header") %>

    <h2 class="mt-3 mb-5">Compose</h2>

    <form action="/compose" method="post">
        <div class="form-group">
            <label for="blogTitle">Title</label>
            <input type="text" name="blogTitle" id="blogTitle" class="form-control" required autofocus autocomplete="off">
        </div>

        <div class="form-group">
            <label for="blogPost">Post</label>
            <textarea name="blogBody" id="blogPost" class="form-control" rows="5"></textarea>
        </div>

        <button type="submit" class="btn btn-primary">Publish</button>
    </form>


<%- include("footer") %>